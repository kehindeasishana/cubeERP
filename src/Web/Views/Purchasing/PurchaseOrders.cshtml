@model Web.Models.ViewModels.Purchases.PurchaseOrders

@{
    ViewBag.Title = "Purhase Orders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Html.ActionLink("Add Purchase Order", "AddPurchaseOrder", "Purchasing") </h2>
<h3>Purchase Orders</h3>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Customer Invoice No</th>
            <th>Vendor Id</th>
            <th>Amount</th>
            <th>GL Account</th>
            <th>Quantity Received</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var po in Model.PurchaseOrderListLines)
        {
            <tr>
                <td>@po.Date.ToShortDateString()</td>
                <td>@Html.ActionLink((string)string.Format("{0}", po.Id), "Edit", new { id = po.Id })</td>
                <td>@po.Vendor</td>
                <td>@po.Amount</td>
                <td>@po.GLAccount</td>
                <td>@po.Quantity</td>
                <td></td>
                @if (po.Completed)
                {
                    if (!po.HasInvoiced)
                    {
                        <td>@Html.ActionLink("Create Invoice", "AddPurchaseInvoice", new { id = @po.Id })</td>
                    }
                }
                else
                {
                    <td>@Html.ActionLink(" Create Receipt", "AddPurchaseReceipt", new { @id = @po.Id })</td>
                }
            </tr>
        }
    </tbody>
</table>
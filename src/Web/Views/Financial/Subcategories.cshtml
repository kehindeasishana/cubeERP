@model IEnumerable<Core.Domain.Financials.AccountSubCategory>

@{
    ViewBag.Title = "Subcategories";
}

<h2>Subcategories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Accounts.AccountClass.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Accounts.AccountName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccountSubCategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Accounts.AccountClass.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Accounts.AccountName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccountSubCategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
